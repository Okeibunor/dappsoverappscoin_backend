{
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of your TypeScript source files
    "module": "commonjs", // Module system (Node.js typically uses "commonjs")
    "target": "ES6", // Target version of JavaScript (you can adjust this if needed)
    "strict": true, // Enables strict type-checking options
    "esModuleInterop": true // Enables interop between CommonJS and ES modules
  },
  "include": [
    "src/**/*.ts"
  ], // Include all TypeScript files in the src folder
  "exclude": [
    "node_modules"
  ]
}